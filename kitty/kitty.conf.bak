vim:fileencoding=utf-8:foldmethod=marker

# themes
# include onedark.conf
# include gruvbox-dark.conf

# Fonts
font_family      family="JetBrainsMonoNL Nerd Font Mono"
bold_font        family='JetBrainsMonoNL Nerd Font Mono' style=Bold
italic_font      auto
bold_italic_font family='JetBrainsMonoNL Nerd Font Mono' style='Bold Italic'

font_size 18

# Text cursor
cursor_shape block
cursor_shape_unfocused hollow
cursor_blink_interval 0

# Scrollback
scrollback_lines 5000

# window layout
remember_window_size no
draw_minimal_borders no
window_border_width 1.5pt
window_margin_width 2
window_padding_width 2
confirm_os_window_close 0

# tab bar
tab_bar_edge top
tab_bar_style powerline

# keyboard shortcuts
map ctrl+n launch --location=neighbor
map ctrl+f launch --location=first
map cmd+f show_scrollback

